<h1>my flickr photos</h1>

<%= link_to "User edit", edit_user_registration_path, :method => :get %><br />

<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.title %></td>
    <td><%= image_tag(FlickRaw.url_t flickr.photos.getInfo(:photo_id => photo.flickr_photo_id)) if photo.flickr_photo_id %></td>
    <td><%= link_to 'View', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

